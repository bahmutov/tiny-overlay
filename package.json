{
  "name": "tiny-overlay",
  "description": "Full page overlay implemented in JavaScript",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "commit": "commit-wizard",
    "test": "npm run lint",
    "lint": "standard *.js",
    "build": "webpack --verbose",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/tiny-overlay.git"
  },
  "keywords": [
    "overlay",
    "page",
    "javascript",
    "tiny",
    "micro"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/tiny-overlay/issues"
  },
  "homepage": "https://github.com/bahmutov/tiny-overlay#readme",
  "config": {
    "pre-git": {
      "commit-msg": [
        "simple"
      ],
      "pre-commit": [
        "npm run lint",
        "npm run test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "devDependencies": {
    "pre-git": "3.1.1",
    "standard": "5.4.1",
    "webpack": "1.12.9",
    "semantic-release": "^4.3.5"
  }
}
